{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["apps/server/src/*"],
      "@my-project/trpc": ["packages/trpc/dist"],
      "@my-project/trpc/*": ["packages/trpc/dist/*"],
      "@my-project/shared": ["packages/shared/dist"],
      "@my-project/shared/*": ["packages/shared/dist/*"]
    },
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "build.config.js"],
  "exclude": ["node_modules", "dist"]
}
