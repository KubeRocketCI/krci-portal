{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@my-project/shared": ["../shared/dist"],
      "@my-project/shared/*": ["../shared/dist/*"],
      "@/*": ["../../apps/server/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
